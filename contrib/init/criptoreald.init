#!/bin/bash
#
#  criptoreald The Criptoreal Core server.
#
#
# chkconfig: 345 80 20
# description: criptoreald
# processname: criptoreald
#

# Source function library.
. /etc/init.d/functions

# you can override defaults in /etc/sysconfig/criptoreald, see below
if [ -f /etc/sysconfig/criptoreald ]; then
        . /etc/sysconfig/criptoreald
fi

RETVAL=0

prog=criptoreald
# you can override the lockfile via BITCOIND_LOCKFILE in /etc/sysconfig/criptoreald
lockfile=${BITCOIND_LOCKFILE-/var/lock/subsys/criptoreald}

# criptoreald defaults to /usr/bin/criptoreald, override with BITCOIND_BIN
criptoreald=${BITCOIND_BIN-/usr/bin/criptoreald}

# criptoreald opts default to -disablewallet, override with BITCOIND_OPTS
criptoreald_opts=${BITCOIND_OPTS--disablewallet}

start() {
    echo -n $"Starting $prog: "
    daemon $DAEMONOPTS $criptoreald $criptoreald_opts
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && touch $lockfile
    return $RETVAL
}

stop() {
    echo -n $"Stopping $prog: "
    killproc $prog
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && rm -f $lockfile
    return $RETVAL
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    status)
        status $prog
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo "Usage: service $prog {start|stop|status|restart}"
        exit 1
        ;;
esac
